<main>
	<div class="index">
		<h1>Books</h1>
		<table cellspacing="10">
			<thead>
				<tr>
					<th>Title</th>
					<th>Body</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
		    <% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book), :style=>"color:black;"%></td>
					<td><%= link_to "Edit", edit_book_path(book), :style=>"color:black;" %></td>
					<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure", :style=>"color:black;" %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
		<h2> New Book</h2>
		<%= form_for(@newbook) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>
		<h4>Body</h4>
		<%= f.text_area :body, class: "book_body" %>
		<h4></h4>
		<%= f.submit 'Create Book' %>
		<% end %>
	</div>
</main>