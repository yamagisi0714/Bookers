<div class="edit">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<h4></h4>
	<%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(params[:id]), :style=>"color:black;" %> | <%= link_to "Back", books_path, :style=>"color:black;" %>
</div>